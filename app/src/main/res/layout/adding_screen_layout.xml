<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/backgroundColor"
    android:layout_height="match_parent">

    <EditText
        android:textColorHint="@color/darkerButtonColor"
        android:textColor="@color/buttonColor"
        android:id="@+id/bill_price"
        android:layout_width="127dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Kwota"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:backgroundTint="#000000" />/>

    <EditText
        android:id="@+id/bill_name"
        android:layout_width="0dp"
        app:backgroundTint="#000000"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nazwa"
        android:textColorHint="@color/darkerButtonColor"
        android:textColor="@color/buttonColor"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:textColorHint="@color/darkerButtonColor"
        android:textColor="@color/buttonColor"
        android:id="@+id/bill_description"
        android:layout_width="0dp"
        android:layout_height="148dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="13dp"
        app:backgroundTint="#000000"
        android:ems="10"
        android:hint="Opis"
        android:maxLines="8"
        android:inputType="textMultiLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bill_name"
        app:layout_constraintHorizontal_bias="1.0" />

    <Button
        android:background="@color/buttonColor"
        android:id="@+id/bill_date_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ustaw datÄ™"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bill_price"
        android:layout_marginRight="8dp"
        app:layout_constraintVertical_bias="0.501" />

    <Button
        android:id="@+id/acceptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:background="@color/buttonColor"
        android:text="Dodaj"
        app:layout_constraintBaseline_toBaselineOf="@+id/cancelButton"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:layout_marginLeft="16dp"
        android:background="@color/buttonColor"
        android:text="Anuluj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>